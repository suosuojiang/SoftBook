  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0; 
  padding: 0 30rpx;
}

.post-fake{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}

.like{
  margin-right: 30rpx;
  margin-top: 10rpx;
}

.posting-container{
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  z-index: 999;
}

