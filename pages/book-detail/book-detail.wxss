.detail-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.vertical{
  display: flex;
  flex-direction: column;
}

.description{
  color:#999;
  margin-right: 30rpx;
}

.post-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-shadow: 1px -1px 1px #e3e3e3;
